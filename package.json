{
  "name": "vue-outside-events",
  "version": "0.9.0",
  "description": "Bind to events triggered by a specific event occurring outside the specified element.",
  "main": "dist/vue-outside-events.min.js",
  "scripts": {
    "test": "jest --coverage",
    "cover": "opn coverage/lcov-report/index.html",
    "build": "rollup -c",
    "lint": "standard \"src/*.js\"",
    "lint:fix": "standard \"src/*.js\" --fix",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nchutchind/vue-outside-events.git"
  },
  "author": "Nicholas Hutchind <nicholas@hutchind.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nchutchind/vue-outside-events/issues"
  },
  "homepage": "https://github.com/nchutchind/vue-outside-events#readme",
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "jest": "^19.0.2",
    "np": "^2.13.1",
    "opn-cli": "^3.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-filesize": "^1.2.1",
    "rollup-plugin-license": "^0.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "standard": "^10.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "roots": [
      "test/"
    ]
  },
  "engines": {
    "node": ">=6"
  }
}
